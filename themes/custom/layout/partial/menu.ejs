<header class="header row mb-5">
    <div class="mobile-nav">
        <input type="checkbox" id="mobile-menu-checkbox"/>
        <label for="mobile-menu-checkbox" class="mobile-nav-btn">menu</label>
        <div class="mobile-nav-content">
            <% for (let item in config.menu) { %>
                <a 
                    class="<%= page.title.toLowerCase() === item.toLowerCase() ? 'active' : '' %>" 
                    href="<%= config.menu[item] %>"> 
                        <%= item %> 
                </a>
            <% } %>
        </div>
    </div>
    <nav class="col-12 col-md-8 col-lg-6 ">
        <% for (let item in config.menu) { %>
            <a 
                class="<%= page.title.toLowerCase() === item.toLowerCase() ? 'active' : '' %>" 
                href="<%= config.menu[item] %>"> 
                    <%= item %> 
            </a>
        <% } %>
    </nav>
</header>

